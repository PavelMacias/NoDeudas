<div class="container h-100">
    <div class="row h-100 justify-content-center justify-items-center backuser">
        <div class="col-md-8 col-xs-12">
            <article>

                <form action="/registrar_pago" method="POST" >
                    <h1><img class="img-fluid" src="../img/icono.png"> Registrar Pago</h1><br><br>
                    <section>
                        <div class="form-row">

                            <div class="form-group col-md-7 formsection">
                                
                                <select id="inputDeb" class="form-control input-select" name="fld_id_debtor" >
                                    
                                     {{#each links}}
                                        <option selected>{{fld_id}}</option>
                                    {{/each}}
                                    <option selected disabled>Selecciona al deudor</option>
                                </select>
                            </div>

                            <div class="form-group col-md-4">
                                
                                <input type="number" class="form-control input-form" id="inputAmount" name="fld_amout" placeholder="Total...">
                            </div>

                            <button type="submit" class="btn btn-primary">Agregar cargo</button>
                            <br>
                        </div>
                    </section>
                </form>

            </article>
        </div>
    </div>
</div>