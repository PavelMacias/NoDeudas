<div class="container h-100">
    <div class="row h-100 justify-content-center justify-items-center backuser">
        <div class="col-md-8 col-xs-12">
            <article>
                <h1><img class="img-fluid" src="../img/icono.png"> Generar Nuevo Cobro</h1><br><br>
                <form action="realizar_cobro" method="POST">
                    <section>
                        <div class="form-row">

                            <div class="form-group col-md-6">
                                <label for="inputDeb"> </label>
                                <select id="inputDeb" class="form-control input-select" name="fld_id_debtor">
                                    <option selected>Aquien vas a cobrar?</option>
                                    {{#each links}}
                                    <option selected>{{fld_id}}</option>
                                    {{/each}}

                                </select>
                            </div>

                            <div class="form-group col-md-3">
                                <input type="number" class="form-control input-form" id="inputAmout" placeholder="Cantidad..." name="fld_amout">
                            </div>

                            <!--<div class="form-group col-md-2">
                                <label for="inputInt">Interes(%)</label>
                                <input type="number" class="form-control input-form" id="inputInt">
                            </div>-->
                            <button type="submit" class="btn btn-primary">Agregar cargo</button>
                            <br>
                        </div>
                    </section>
                    <br>
                    <section>
                        <div class="form-row  h-100 justify-content-center align-items-center">
                            <div class="form-group col-md-4 col-center">
                                <input type="text" class="form-control input-form" id="input" placeholder="Total...">
                            </div>
                        </div>
                    </section>
                </form>

            </article>
        </div>

    </div>
</div>